---
machine:
  network:
    hostname: "{{ clusternode.name }}"
    interfaces:
    - deviceSelector:
        busPath: "0*"
      addresses:
{% if clusternode.ip4 is defined %}
{% for ip4 in clusternode.ip4 %}
        - "{{ ip4 }}"
{% endfor %}
{% endif %}
{% if clusternode.ip6 is defined %}
{% for ip6 in clusternode.ip6 %}
        - "{{ ip6 }}"
{% endfor %}
{% endif %}
