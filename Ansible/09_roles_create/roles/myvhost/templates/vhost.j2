<VirtualHost *:80>
  ServerAdmin webmaster@{{ ansible_fqdn }}
  ServerName {{ ansible_facts['fqdn'] }}
  DocumentRoot /var/www/vhosts/{{ ansible_hostname }}/

  <Directory /var/www/vhosts/{{ ansible_hostname }}>
    Options +Indexes +FollowSymlinks +Includes
    Order allow,deny
    Allow from all
    Require all granted
    </Directory>
</VirtualHost>